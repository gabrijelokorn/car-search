<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:top="40dp">
        <rotate
            android:pivotX="50%"
            android:pivotY="100%">
            <shape
                android:shape="rectangle">
                <solid android:color="@android:color/black" />
                <size
                    android:width="8dp"
                    android:height="40dp" />
                <corners android:radius="10dp" android:topLeftRadius="0dp" android:topRightRadius="0dp" />
            </shape>
        </rotate>
    </item>

    <item android:bottom="40dp">
        <rotate
            android:pivotX="50%"
            android:pivotY="100%">
            <shape
                android:shape="rectangle">
                <solid android:color="@android:color/holo_red_light" />
                <size
                    android:width="8dp"
                    android:height="40dp" />
                <corners android:radius="10dp" android:bottomRightRadius="0dp" android:bottomLeftRadius="0dp" />
            </shape>
        </rotate>
    </item>
</layer-list>